# Firebase App Distribution Environment Variables Template
# Copy this file to .env.firebase and fill in your actual values
# DO NOT commit .env.firebase to version control

# ============================================
# Common Settings
# ============================================

# Firebase Service Account JSON file path
# Download from Google Cloud Console
FIREBASE_SERVICE_ACCOUNT_FILE=firebase-service-account.json

# Tester groups (comma-separated)
TESTER_GROUPS=internal-testers

# Release notes (optional)
# RELEASE_NOTES="Latest test build"

# ============================================
# Android Settings
# ============================================

# Android Firebase App ID
# Find in Firebase Console > Project Settings > Your Android App
FIREBASE_APP_ID=your-android-firebase-app-id

# ============================================
# iOS Settings
# ============================================

# iOS Firebase App ID
# Find in Firebase Console > Project Settings > Your iOS App
FIREBASE_APP_ID_IOS=your-ios-firebase-app-id

# Apple Developer Team ID
# Find in Apple Developer Portal > Membership > Team ID
# Example: ABC123DEF4
TEAM_ID=your-apple-team-id

# Path to P12 certificate file
# Export from Keychain Access on macOS
P12_PATH=/path/to/your/distribution-certificate.p12

# P12 certificate password
# Set when exporting from Keychain Access
P12_PASSWORD=your-p12-password

# Path to Provisioning Profile
# Download from Apple Developer Portal > Profiles
PROVISIONING_PROFILE_PATH=/path/to/your/adhoc-profile.mobileprovision

# ============================================
# Optional: Override default paths
# ============================================

# Android google-services.json location (default: composeApp/google-services.json)
# GOOGLE_SERVICES_JSON_PATH=composeApp/google-services.json

# iOS GoogleService-Info.plist location (default: iosApp/iosApp/GoogleService-Info.plist)
# GOOGLE_SERVICE_INFO_PLIST_PATH=iosApp/iosApp/GoogleService-Info.plist